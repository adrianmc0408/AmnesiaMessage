<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="90dp"
    android:layout_width="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="0dp"
        app:cardBackgroundColor="@color/colorWhite"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardview_peticion_amistad"
            android:layout_width="match_parent"
            android:layout_height="90dp">


            <de.hdodenhof.circleimageview.CircleImageView
                
                android:id="@+id/peticion_amistad_image_profile"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_margin="10dp"
                android:layout_marginStart="16dp"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.47" />

            <TextView
                android:id="@+id/username_peticion_amistad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="16dp"

                android:layout_toEndOf="@id/peticion_amistad_image_profile"
                android:layout_toRightOf="@id/peticion_amistad_image_profile"
                android:text="usuario420"
                android:textColor="@color/colorDarkGrey"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.045"
                app:layout_constraintStart_toEndOf="@+id/peticion_amistad_image_profile"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/peticion_amistad_image_profile"
                android:layout_toRightOf="@id/peticion_amistad_image_profile"
                android:text="quiere ser tu amigo"
                android:textColor="@color/colorDarkGrey"
                android:textSize="15sp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.02"
                app:layout_constraintStart_toEndOf="@+id/username_peticion_amistad"
                app:layout_constraintTop_toTopOf="parent" />

            <Button

                android:id="@+id/peticion_amistad_btn_aceptarSolicitud"
                android:layout_width="189dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="16dp"

                android:backgroundTint="@color/colorPrimary"
                android:stateListAnimator="@null"
                android:text="Aceptar solicitud"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/peticion_amistad_image_profile"
                app:layout_constraintTop_toBottomOf="@+id/username_busqueda"
                app:layout_constraintVertical_bias="0.25" />

            <Button
                android:id="@+id/peticion_amistad_btn_eliminar"
                android:layout_width="125dp"
                android:layout_height="39dp"

                android:layout_marginBottom="16dp"
                android:backgroundTint="#FFFFFF"
                android:stateListAnimator="@null"
                android:text="ELIMINAR"
                android:textAlignment="center"
                android:textColor="@color/colorRed"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/peticion_amistad_btn_aceptarSolicitud" />
            " />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>