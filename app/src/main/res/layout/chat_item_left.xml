<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content">


    <!-- Recordar cmmabiar padding al recibir foto 8dp-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/msg_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/show_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/msg_profile_image"
        android:background="@drawable/bg_messasge_left"
        android:padding="80dp"
        android:src="@drawable/ic_cargador"
        android:visibility="gone" />

    <TextView
        android:id="@+id/show_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/msg_profile_image"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:text="hello"
        android:padding="8dp"
        android:background="@drawable/bg_messasge_left"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_seen"
        android:text="visto"
        android:layout_below="@id/show_message"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_hour"
        android:text="12:08"
        android:layout_marginRight="5dp"
        android:layout_below="@id/show_message"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/txt_seen"/>

</RelativeLayout>